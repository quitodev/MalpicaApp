<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".proveedores.IngresarProveedores"
    android:background="#B3000000">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textIngresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/proveedores_ingresar"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/textCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textIngresar"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/codigo"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editCodigo"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textCodigo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_codigo"
                android:inputType="textPersonName"
                android:maxLength="12"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <TextView
                android:id="@+id/textRazonSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editCodigo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/razon_social"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editRazonSocial"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textRazonSocial"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_razon_social"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <TextView
                android:id="@+id/textCondicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editRazonSocial"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/condicion"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editCondicion"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textCondicion"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_condicion"
                android:inputType="textPersonName"
                android:maxLength="2"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editCondicion"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/descripcion"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editDescripcion"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textDescripcion"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_descripcion"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <TextView
                android:id="@+id/textCuit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editDescripcion"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/cuit"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editCuit"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textCuit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_cuit"
                android:inputType="textPersonName"
                android:maxLength="13"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <TextView
                android:id="@+id/textDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editCuit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/direccion"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editDireccion"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textDireccion"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_direccion"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <TextView
                android:id="@+id/textLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editDireccion"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/localidad"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editLocalidad"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textLocalidad"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_localidad"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <TextView
                android:id="@+id/textContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editLocalidad"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/contacto"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editContacto"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textContacto"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_contacto"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <TextView
                android:id="@+id/textTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editContacto"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/tipo_proveedor"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/editTipo"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textTipo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-light"
                android:hint="@string/ingresar_tipo"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:text=""
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="Autofill"/>

            <Button
                android:id="@+id/buttonGuardar"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editTipo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="#323232"
                android:drawableLeft="@drawable/ic_save_orange"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="15dp"
                android:text="@string/guardar_datos"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded,RtlSymmetry"/>

            <EditText
                android:id="@+id/editVacio"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/buttonGuardar"
                android:layout_marginTop="35dp"
                android:background="#00000000"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="@string/componentes"
                android:inputType="textPersonName"
                android:text=""
                tools:ignore="Autofill"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>